{
    "name": "harmony-react-ui",
    "version": "1.0.3",
    "description": "A modern, accessible React component library with beautiful design and smooth animations",
    "main": "./dist/index.js",
    "module": "./dist/index.mjs",
    "types": "./dist/index.d.ts",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.mjs",
            "require": "./dist/index.js"
        },
        "./styles.css": "./dist/styles.css"
    },
    "files": [
        "dist",
        "README.md",
        "LICENSE"
    ],
    "scripts": {
        "build:bundle": "tsup",
        "build:css": "tailwindcss -i ./src/styles.css -o ./dist/styles.css",
        "build": "npm run build:bundle && npm run build:css",
        "prepublishOnly": "npm run build",
        "test": "vitest run",
        "test:watch": "vitest"
    },
    "keywords": [
        "react",
        "components",
        "ui",
        "design-system",
        "tailwindcss",
        "typescript",
        "harmony",
        "accessible",
        "a11y"
    ],
    "author": "Abderrahman Lahmidi",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/Abderrahmanlahmidi/Harmony",
        "directory": "packages/harmony-ui"
    },
    "bugs": {
        "url": "https://github.com/Abderrahmanlahmidi/Harmony/issues"
    },
    "homepage": "https://harmony-snowy-kappa.vercel.app/",
    "peerDependencies": {
        "react": "^18.0.0 || ^19.0.0",
        "react-dom": "^18.0.0 || ^19.0.0"
    },
    "dependencies": {
        "class-variance-authority": "^0.7.1",
        "clsx": "^2.1.1",
        "framer-motion": "^12.23.26",
        "lucide-react": "^0.562.0",
        "tailwind-merge": "^3.4.0"
    },
    "devDependencies": {
        "@tailwindcss/cli": "^4.1.18",
        "@types/react": "^19.2.5",
        "@types/react-dom": "^19.2.3",
        "tailwindcss": "^4.1.18",
        "tsup": "^8.0.1",
        "typescript": "^5.6.3"
    },
    "optionalDependencies": {
        "@rollup/rollup-linux-x64-gnu": "^4.9.6",
        "@rollup/rollup-linux-x64-musl": "^4.9.6"
    },
    "publishConfig": {
        "access": "public"
    }
}